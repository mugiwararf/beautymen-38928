<div class="card">
  <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype.id), method: :get %>
  <div class="card__body">
    <%= link_to prototype.name, prototype_path(prototype.id), class: :card__title%>
        <%= prototype.user.year.name  %>     |
        <%= prototype.user.skin.name  %>
        <% if user_signed_in?   %>
         <% if current_user.liked_by?(prototype.id) %>
         <div><%= link_to '❤️', destroy_like_path(prototype), method: :DELETE, remote: true  %><%= prototype.likes.count %></div>
         <% else %>
         <div><%= link_to '♡', create_like_path(prototype), method: :POST, remote: true  %><%= prototype.likes.count %></div>
         <% end %>
         <% end %>

    <p class="card__summary">
       <%= prototype.created_at %><br>
      <%= prototype.recommendation.truncate(50) %>
        <%= link_to "続きを読む", prototype_path(prototype.id), class: :card_num %>
    </p>
    <%= link_to "#{prototype.user.nickname}さん", user_path(prototype.user.id), class: :card__user %>
  </div>
</div>


